<% if @game.remaining_guesses == 5 %>
  <%= image_tag("stickfigure1.png", :alt => "hangman", height: '200px', width: '75px') %>
<% elsif @game.remaining_guesses == 4 %>
  <%= image_tag("stickfigure2.png", :alt => "hangman", height: '200px', width: '75px') %>
<% elsif @game.remaining_guesses == 3 %>
  <%= image_tag("stickfigure3.png", :alt => "hangman", height: '200px', width: '75px') %>
<% elsif @game.remaining_guesses == 2 %>
  <%= image_tag("stickfigure4.png", :alt => "hangman", height: '200px', width: '75px') %>
<% elsif @game.remaining_guesses == 1 %>
  <%= image_tag("stickfigure5.png", :alt => "hangman", height: '200px', width: '75px') %>
<% elsif @game.remaining_guesses == 0 %>
  <%= image_tag("stickfigure6.png", :alt => "hangman", height: '200px', width: '75px') %>
<% else %>
  <%= image_tag("blankstick.png", :alt => "hangman", height: '200px', width: '75px') %>
<% end %>
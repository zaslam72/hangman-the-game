<div class="signup user-form">
  <center><h2 class="ui headers">Sign Up</h2></center>
  <%= form_for @current_user, html: { class: "ui form" } do |f| %>

    <% if @errors %>
      <ul>
      <% @errors.full_messages.each do |error| %>
        <li><%= error %></li>
      <% end %>
      </ul>
    <% end %>

    <div class= "field">
      <label>Name</label> 
      <%= f.text_field :name, placeholder: "Name" %>
    </div>

    <div class= "field">
      <label>Username</label> 
      <%= f.text_field :username, placeholder: "Username" %>
    </div>

    <div class= "field">
      <label>Password</label> 
      <%= f.password_field :password, placeholder: "Password" %>
    </div>

    <div class= "field">
      <label>Confirm Password</label> 
      <%= f.password_field :password_confirmation, placeholder: "Confirm Password" %>
    </div>
      <center><%= f.submit "Submit", class: "ui red button" %></center>
  <% end %>

  <center>Already a member? <%= link_to "Log In", login_path, remote: true %></center>
</div>